---
import type { GetStaticPaths } from "astro";
import Layout from "src/layouts/Layout.astro";
import { Image } from "astro:assets";

import ServiceDetail from "@components/ServiceDetail.astro";
import ServiceHero, {
  type ServiceFeature,
} from "@components/ServiceHero.astro";
import Shield from "@components/Icons/Shield.svg";
import Drafting from "@components/Icons/Drafting.svg";
import StoreBell from "@components/Icons/StoreBell.svg";

import ServiceCard from "@components/ServiceCard.astro";

import EstateImg from "@assets/images/services/estate.png";
import heroBg from "@assets/images/bg/hero-bg.png";

import ApplicationLogosCarousel from "@components/ApplicationLogosCarousel.astro";

const title = "Real Estate Assistant";
const description = `Your remote transaction coordinator and lead manager. Real Estate VAs specialize in keeping your pipeline moving and your schedule tight.`;

const serviceFeature: ServiceFeature = {
  title,
  description,
  features: [
    {
      Icon: Shield,
      description: "Manage listing platforms (MLS, Zillow, etc.)",
    },
    {
      Icon: Shield,
      description: "Handle contract paperwork and disclosures",
    },
    {
      Icon: Drafting,
      description: "Schedule showings and client appointments",
    },
    {
      Icon: Drafting,
      description: "Follow up with leads via CRM",
    },
    {
      Icon: StoreBell,
      description: "Coordinate with brokers, buyers, and inspectors",
    },
    {
      Icon: StoreBell,
      description: "Research comps and market data",
    },
  ],
};
---

<Layout preloadedImage={heroBg}>
  <ServiceHero serviceFeature={serviceFeature} />

  <ServiceDetail title="Every missed lead is a missed opportunity.">
    <div class="mx-auto aspect-video max-w-200">
      <!-- max-w-136  -->
      <ServiceCard
        class="aspect-video w-full bg-[#ededed]!"
        id="calendar-service"
      >
        <Fragment slot="title">
          Prepare contracts and paperwork for smooth transactions
        </Fragment>
        <Fragment slot="content">
          <Image src={EstateImg} alt={"virtual assistant "} />
        </Fragment>
      </ServiceCard>
    </div>
  </ServiceDetail>

  <ApplicationLogosCarousel />
</Layout>

<style>
  .service-grid {
    display: grid;
  }

  .service-grid {
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    place-content: center;
    gap: 1.5rem;
    grid-template-areas:
      "app"
      "calendar"
      "checkbox";
  }

  @media (width <= 48rem) {
    #checkbox-service,
    #calendar-service,
    #app-service {
      background-color: #ededed !important;
    }
  }
  @media (width >= 60rem) {
    .service-grid {
      grid-template-columns: repeat(2, auto);
      grid-template-rows: 1fr 1fr;
      gap: 1.5rem;
      align-items: center;
      grid-template-areas:
        "app calendar"
        "app checkbox";
    }
    #app-service {
      background-color: #ededed;
    }
  }
  @media (width >= 90rem) {
    .service-grid {
      grid-template-columns: repeat(3, auto);
      grid-template-rows: 1fr auto 5.9375rem;
      place-content: center;
      grid-template-areas:
        ". app ."
        "calendar app checkbox"
        "calendar . checkbox";
    }
    #calendar-service {
      background-color: #ededed;
    }

    /* bg-[#EDEDED]!  */
  }
</style>
