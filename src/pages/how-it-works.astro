---
import type { GetStaticPaths } from "astro";
import Layout from "src/layouts/Layout.astro";
import { Image } from "astro:assets";

import ServiceDetail from "@components/ServiceDetail.astro";
import ServiceHero, {
  type ServiceFeature,
} from "@components/ServiceHero.astro";
import Mail from "@components/Icons/Mail.svg";
import Calendar from "@components/Icons/Calendar.svg";
import Filter from "@components/Icons/Filter.svg";
import Shield from "@components/Icons/Shield.svg";
import Drafting from "@components/Icons/Drafting.svg";
import StoreBell from "@components/Icons/StoreBell.svg";
import ServiceCard from "@components/ServiceCard.astro";
import CalendarSvc from "@components/ServiceIcon/CalendarSvc.svg";
import AppSvc from "@components/ServiceIcon/AppSvc.svg";
import CheckboxSvc from "@components/ServiceIcon/CheckboxSvc.svg";

import heroBg from "@assets/images/bg/hero-bg.png";
import ApplicationLogosCarousel from "@components/ApplicationLogosCarousel.astro";
import HireBtn from "@components/HireBtn.astro";

const title = "Executive Assistant";
const description = `
        Let our virtual assistants handle the tasks that slow you down, so you
        can focus on strategy, growth, and the things you love most. With
        reliable support and seamless execution, we make running your business
        easier, smarter, and stress-free.
`;

const serviceFeature: ServiceFeature = {
  title,
  description,
  features: [
    {
      Icon: Mail,
      description: "Calendar and email management",
    },
    {
      Icon: Shield,
      description: "Travel arrangements and reservations",
    },
    {
      Icon: Calendar,
      description: "Meeting scheduling and follow-ups",
    },
    {
      Icon: Drafting,
      description: "Drafting reports and internal memos",
    },
    {
      Icon: Filter,
      description: "Inbox triage and priority filtering",
    },
    {
      Icon: StoreBell,
      description: "Managing to-do lists and reminders",
    },
  ],
};
---

<Layout preloadedImage={heroBg}>
  <section
    id="main-services"
    class="relative z-1 overflow-clip px-4 py-section"
  >
    <div
      class="mx-auto flex w-full max-w-176 flex-col gap-[clamp(2rem,4vw,3rem)] md:max-w-7xl"
    >
      <div class="max-w-226.5">
        <span
          class="mb-6 block text-center font-roboto text-base leading-h font-bold tracking-widest text-accent uppercase"
        >
          Use case
        </span>

        <h2
          class="m-0 mb-10.75 bg-linear-to-r from-primary to-accent bg-clip-text text-center font-roboto text-[clamp(2.5rem,5vw,3.0625rem)] leading-h font-bold tracking-normal text-transparent"
        >
          3 STEPS ONLY
        </h2>
        <p
          class="m-0 w-full max-w-155.75 text-center font-roboto text-base leading-p text-tertiary md:text-left"
        >
          Hiring doesn’t have to be hard. We’ve designed a seamless 3-step
          process to get you matched with the top 1% of global virtual
          assistants — fast. No long onboarding. No guessing. Just efficient,
          reliable support that helps your business grow.
        </p>
        <HireBtn />
      </div>
      <!-- grid-cols-[repeat(auto-fit,minmax(min(413.33px,100%),1fr))] -->
      <!-- sm:grid-cols-2 lg:grid-cols-6 lg:grid-rows-2 -->

      <div class="">
        <div class="service-grid w-full">
          <!-- max-w-136  -->
          <ServiceCard
            class="w-full px-5 xl:px-10 2xl:px-15"
            style="grid-area:calendar"
            id="calendar-service"
          >
            <Fragment slot="title">
              Organize and maintain your
              <br />
              calendar with precision
            </Fragment>
            <Fragment slot="content">
              <CalendarSvc
                class="aspect-video h-auto w-62.5 xs:w-75 sm:w-auto"
              />
            </Fragment>
          </ServiceCard>

          <ServiceCard
            class="w-full px-5 xl:px-10 2xl:px-15"
            style="grid-area:app"
            id="app-service"
          >
            <Fragment slot="title">
              Manage your inbox and handle
              <br />
              important communications
            </Fragment>
            <Fragment slot="content">
              <AppSvc class="aspect-video h-auto w-62.5 xs:w-75 sm:w-auto" />
            </Fragment>
          </ServiceCard>

          <ServiceCard
            class="w-full px-5 xl:px-10 2xl:px-15"
            style="grid-area:checkbox"
            id="checkbox-service"
          >
            <Fragment slot="title">
              Organize and maintain your
              <br />
              calendar with precision
            </Fragment>
            <Fragment slot="content">
              <CheckboxSvc
                class="aspect-video h-auto w-62.5 xs:w-75 sm:w-auto"
              />
            </Fragment>
          </ServiceCard>
        </div>
      </div>
    </div>

    <Image
      src={heroBg}
      alt={"blur for bg"}
      class={"absolute inset-0 w-full h-full -z-1  "}
    />
  </section>

  <ApplicationLogosCarousel />
</Layout>

<style>
  .service-grid {
    display: grid;
  }

  .service-grid {
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    place-content: center;
    gap: 1.5rem;
    grid-template-areas:
      "app"
      "calendar"
      "checkbox";
  }

  @media (width <= 48rem) {
    #checkbox-service,
    #calendar-service,
    #app-service {
      background-color: #ededed !important;
    }
  }
  @media (width >= 60rem) {
    .service-grid {
      grid-template-columns: repeat(2, auto);
      grid-template-rows: 1fr 1fr;
      gap: 1.5rem;
      align-items: center;
      grid-template-areas:
        "app calendar"
        "app checkbox";
    }
    #app-service {
      background-color: #ededed;
    }
  }
  @media (width >= 90rem) {
    .service-grid {
      grid-template-columns: repeat(3, auto);
      grid-template-rows: 1fr auto 5.9375rem;
      place-content: center;
      grid-template-areas:
        ". app ."
        "calendar app checkbox"
        "calendar . checkbox";
    }
    #calendar-service {
      background-color: #ededed;
    }

    /* bg-[#EDEDED]!  */
  }
</style>
