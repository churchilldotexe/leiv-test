---
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"div">;

const { class: className, ...rest } = Astro.props as Props;
---

<div class="bg-bg-bg w-fit rounded-[28px] px-30 py-11.25" {...rest}>
  <h1
    class="mb-9 text-center font-roboto text-25px leading-[100%] text-primary"
  >
    <slot name="title" />
  </h1>

  <!-- Inner card -->
  <div class="mx-auto">
    <!-- <Image src={src} alt={alt} /> -->
    <slot name="content" />
  </div>
</div>

<style>
  /* Custom shadows (tweak as needed) */
  .shadow-shell {
    /* box-shadow:
      0 30px 70px rgba(0, 0, 0, 0.08),
      0 12px 30px rgba(0, 0, 0, 0.06),
      0 4px 12px rgba(0, 0, 0, 0.04); */
    box-shadow:
      0 30px 70px 16px rgba(0, 0, 0, 0.08),
      0 12px 30px 10px rgba(0, 0, 0, 0.06),
      0 4px 12px rgba(0, 0, 0, 0.04);
  }
  .shadow-card {
    box-shadow:
      0 18px 36px rgba(0, 0, 0, 0.08),
      0 6px 16px rgba(0, 0, 0, 0.06),
      0 1px 2px rgba(0, 0, 0, 0.08);
  }
  .shadow-inset {
    box-shadow:
      inset 4px 4px 8px rgba(0, 0, 0, 0.06),
      inset -4px -4px 8px rgba(255, 255, 255, 0.9);
  }
  .shadow-btn {
    box-shadow:
      0 10px 20px rgba(0, 102, 255, 0.35),
      0 2px 6px rgba(0, 102, 255, 0.3);
  }

  .bg-bg-bg {
    /* background: rgba(25, 25, 25, 0.08); */

    background: rgba(25, 25, 25, 0.08);
    box-shadow: 0px 4px 80px 5px rgba(18, 18, 18, 0.25);
    border-radius: 40px;
  }
</style>
